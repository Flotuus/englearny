{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Liste Utilisateurs{% endblock %}

{% block contenu %}
{{parent()}}
<div class="container-fluid">
    <div class="row justify-content-center">
        <h1 class="text-center text-secondary p-4">Liste des utilisateurs</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-8 p-4 m-0 text-primary">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Email</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Prenom</th>
                            <th scope="col">Entreprise</th>
                            <th></th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        {% for utilisateur in utilisateurs %}
                            <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                <td>{{utilisateur.email |capitalize }}</td>
                                <td>{{utilisateur.utilisateur.nom |capitalize }}</td>
                                <td>{{utilisateur.utilisateur.prenom |capitalize }}</td>
                                <td>{{utilisateur.utilisateur.entreprise.libelle |capitalize }}</td> #}
                                <td><a href="{{path('modifUtilisateur',{'id': utilisateur.id})}}" class="text-white"><span class="material-icons" title="Modifier un utilisateur">create</span></a></td>
                                <td><a href="{{path('suppUtilisateur',{'id': utilisateur.id})}}" class="text-white"><span class="material-icons" title="Supprimer un utilisateur"> delete </span></a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %} 