{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Ajout test{% endblock %}

{% block contenu %}
{{parent()}}
<div class="container-fluid">
    <div class="row justify-content-center">
        <h1 class="text-center text-secondary p-4">Ajout d'un test</h1>
    </div>
  <div class="row justify-content-center">
        <div class="col-8 bg-primary p-4 m-0 text-white">

        
        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.libelle, 'Nom du test', {'label_attr': {'class': 'font-weightbold'}}) }}
            {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.niveau, 'Niveau de ce test', {'label_attr':{'class': 'font-weight-bold'}}) }}
            {{ form_widget(form.niveau, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.liste, 'A quel liste ce test fait référence ', {'label_attr':{'class': 'font-weight-bold'}}) }}
            {{ form_widget(form.liste, {'attr': {'class': 'form-control'}}) }}
        </div>
       
        <div class="form-group mx-auto text-center">
            {{ form_widget(form.ajouter, { 'label': "Ajouter", 'attr': {'class': 'btn font-weightbold bg-success text-white mx-auto text-center'}}) }}
        </div>

        {{ form_end(form) }}
            
        </div>
    </div>
</div>
{% endblock %}

