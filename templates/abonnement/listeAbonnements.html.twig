{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Liste Abbonement{% endblock %}

{% block contenu %}
{{parent()}}
<div class="container-fluid">
    <div class="row justify-content-center">
        <h1 class="text-center text-secondary p-4">Liste des abonnements</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-8 p-4 m-0 text-primary">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            
                            <th scope="col">Libell√©</th>
                            <th scope="col">PaiementUneFois</th>
                            <th></th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        {% for abonnement in abonnements %}
                            <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                <td>{{abonnement.libelle |capitalize }}</td>
                                <td>{{abonnement.paiementunefois |capitalize }}</td>

                                <td><a href="{{path('modifAbonnement',{'id':  abonnement.id})}}" class="text-white"><span class="material-icons" title="Modifier un abonnement">create</span></a></td>
                                <td><a href="{{path('suppAbonnement',{'id': abonnement.id})}}" class="text-white"><span class="material-icons" title="Supprimer un abonnement"> delete </span></a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %} 