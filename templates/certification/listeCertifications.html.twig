{% extends 'base.html.twig' %}

{% block title %}Liste Certifications{% endblock %}

{% block contenu %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <h1 class="text-center text-secondary p-4">Liste des Certifications</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-8 p-4 m-0 text-primary">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Libell√©</th>
                            <th scope="col">NbTests</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for certification in certifications %}
                            <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                <td>{{certification.libelle |capitalize }}</td>
                                <td>{{certification.nbTests}}</td>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
